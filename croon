use Schedule::Cron;
use Getopt::Std;
use File::Basename;
use Data::Dumper;

main();

sub main{
    get_opts();
    %CFG = read_cfg() if( -s $CONFIG );
   
    my $cron = new Schedule::Cron(\&dispatcher);
    $cron->load_crontab( $CRONFILE ) or die "Couldn't load your cronfile - $CRONFILE";
    $cron->run(catch=>1);

    return 0;
}

sub dispatcher {
    my ( $id, @args ) = @_;

    # nice the process
    nice($CFG{$id}->{'nice'} ? $CFG{$id}->{'nice'} : $DNICE) if( !defined( $CFG{$id} ) or $CFG{$id}->{'nice'});
    #nice the io
    ionice($CFG{$id}->{'ionice'} ? $CFG{$id}->{'ionice'} : $DIO) if( !defined( $CFG{$id} ) or $CFG{$id}->{'ionice'});

    #TODO
    #profile the proess
    if( !$SKIP_PROFILE or $CFG{$id}->{'prof'} ) {
        if( which('time') ) {
            
        }
    }
}

sub nice {
    my ( $prio ) = @_;
    my $nice = which('nice');
    return undef unless( $nice );

    `$nice -n $prio`;
    return $?;
}

sub ionice {
	my ( $prio ) = @_;
    my $ionice = which('ionice');
    return undef unless( $ionice );

    `$ionice -n$prio`;
    return $?;
}

sub which { my $which = `which $_[0]`; chomp $which; return $which; }

sub read_config {
    my %ret = ();
	# processname, niceness, ioniceness, profile
    if( -s $CONFIG ) {
        open my $fh, '<', $CONFIG or die "Cannot open $CONFIG: $!";
        while ( my $line = <$fh> ) {
            chomp;
            my ( $proc, $nice, $ionice, $prof ) = split /,/, $line;
            my %tmp = (
                'nice' => $nice,
                'ionice' => $ionice,
                'prof' => $prof
            );
            $proc = basename( $proc );
            $ret{$proc} = \%tmp;
        }
        close $fh;
    }
    return %ret;
}

sub get_opts {
	my %o = ();
    getopts('C:F:N:D:P',\%o);

    $CRONFILE = $o{F} ? $o{F} : undef;
    $CONFIG = $o{C} ? $o{C} : undef;
    $DNICE = $o{N} ? $o{N} : 10;
    $DIO = $o{D} ? $o{D} : 4;
    $SKIP_PROFILE = $o{P} ? 1 : 0;
}
